<Configuration status="ERROR" monitorInterval="30">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{1} - %msg%n"/>
            <Filters>
                <!-- Block TRACE and DEBUG completely -->
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Suppress verbose loggers -->
        <Logger name="org.apache.axiom" level="ERROR"/>
        <Logger name="org.apache.axis2" level="ERROR"/>
        <Logger name="org.apache.commons" level="ERROR"/>
        <Logger name="org.wso2" level="WARN"/>
        <Logger name="com.datastax" level="ERROR"/>
        <Logger name="org.mongodb" level="ERROR"/>
        <Logger name="org.apache.poi" level="ERROR"/>

        <!-- Set root logger to ERROR to suppress everything else -->
        <Root level="ERROR">
            <AppenderRef ref="Console"/>
        </Root>

        <!-- Only show test results at INFO -->
        <Logger name="org.wso2.micro.integrator.dataservices.core.test" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
