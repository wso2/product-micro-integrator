<?xml version="1.0" encoding="UTF-8"?>
<api name="per-api-cors" context="/testperapicors" xmlns="http://ws.apache.org/ns/synapse">
    <handlers>
        <handler class="org.wso2.micro.integrator.security.handler.CORSRequestHandler">
            <property name="allowHeaders" value="Content-Type,Authorization,X-Custom-Header"/>
            <property name="allowedOrigins" value="https://example.com,https://trusted-domain.com,*.example.com"/>
            <property name="allowedMethods" value="GET,POST,PUT,DELETE"/>
            <property name="allowCredentials" value="true"/>
            <property name="maxAge" value="3600"/>
        </handler>
    </handlers>
    <resource methods="GET POST PUT DELETE" uri-template="/">
        <inSequence>
            <log level="custom">
                <property name="message" value="CORS API - Processing request"/>
                <property name="origin" expression="$trp:Origin"/>
                <property name="method" expression="get-property('axis2', 'HTTP_METHOD')"/>
            </log>
            <payloadFactory media-type="json">
                <format>
                    {
                    "message": "CORS test response",
                    "method": "$1",
                    "origin": "$2",
                    "timestamp": "$3"
                    }
                </format>
                <args>
                    <arg expression="get-property('axis2', 'HTTP_METHOD')"/>
                    <arg expression="$trp:Origin"/>
                    <arg expression="get-property('SYSTEM_TIME')"/>
                </args>
            </payloadFactory>
            <property name="messageType" value="application/json" scope="axis2"/>
            <respond/>
        </inSequence>
        <faultSequence>
            <log level="custom">
                <property name="message" value="CORS API - Error occurred"/>
                <property name="error" expression="get-property('ERROR_MESSAGE')"/>
            </log>
            <payloadFactory media-type="json">
                <format>
                    {
                    "error": "Internal server error",
                    "message": "$1"
                    }
                </format>
                <args>
                    <arg expression="get-property('ERROR_MESSAGE')"/>
                </args>
            </payloadFactory>
            <property name="HTTP_SC" value="500" scope="axis2"/>
            <respond/>
        </faultSequence>
    </resource>
    <resource methods="GET" uri-template="/test">
        <inSequence>
            <payloadFactory media-type="json">
                <format>
                    {
                    "endpoint": "/test",
                    "message": "CORS test endpoint"
                    }
                </format>
            </payloadFactory>
            <property name="messageType" value="application/json" scope="axis2"/>
            <respond/>
        </inSequence>
    </resource>
</api>
